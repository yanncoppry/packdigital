                    form#myForm
                      fieldset#fieldset1
                        h3 Votre Pack
                        .form-group
                          label(for="siret") Composez votre Pack digital :
                          .formControls
                            .form-check.form-check-inline.iconify
                              label.form-check-label(for="type_produit0")
                                input#type_produit0.iconed.rsform-checkbox.form-check-input(
                                  type="checkbox",
                                  name="form[type_produit][]",
                                  value="Site internet Vitrine"
                                )
                                | Site internet Vitrine
                            .form-check.form-check-inline.iconify
                              label.form-check-label(for="type_produit1")
                                input#type_produit1.iconed.rsform-checkbox.form-check-input(
                                  type="checkbox",
                                  name="form[type_produit][]",
                                  value="Site internet E-Commerce"
                                )
                                | Site internet E-Commerce
                            .form-check.form-check-inline.iconify
                              label.form-check-label(for="type_produit3")
                                input#type_produit3.iconed.rsform-checkbox.form-check-input(
                                  type="checkbox",
                                  name="form[type_produit][]",
                                  value="Devis et Facturation"
                                )
                                | Devis et Facturation
                            .form-check.form-check-inline.iconify
                              label.form-check-label(for="type_produit2")
                                input#type_produit2.iconed.rsform-checkbox.form-check-input(
                                  type="checkbox",
                                  name="form[type_produit][]",
                                  value="Site Internet E-Réservation"
                                )
                                | Système de Réservation en ligne
                            
                            .form-check.form-check-inline.iconify
                              label.form-check-label(for="type_produit4")
                                input#type_produit4.iconed.rsform-checkbox.form-check-input(
                                  type="checkbox",
                                  name="form[type_produit][]",
                                  value="Système de paiement en ligne"
                                )
