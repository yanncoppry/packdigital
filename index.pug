                                  td.price - 10.000€
                                tr.aide
                                  td OFFRE Pack RAC (20%) :
                                  td.price - 2.500€
                                tr.rac
                                  td Reste à payer :
                                  td.price 0€

                          .formControls 

                        .form-group
                          .formControls
                            button.btn.btn-primary(
                              type="submit",
                              value="Continuer",
                              disabled
                            ) Continuer
