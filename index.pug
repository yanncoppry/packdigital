                            .form-check.form-check-inline.iconify
                              label.form-check-label(for="type_produit5")
                                input#type_produit5.iconed.rsform-checkbox.form-check-input(
                                  type="checkbox",
                                  name="form[type_produit][]",
                                  value="Sauvegardes Cloud automatisées"
