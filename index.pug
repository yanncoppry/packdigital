                            input.form-control(
                              name="email",
                              type="text",
                              placeholder="none"
                            )
                        .form-group
                          label(for="phone") Téléphone
                          .formControls
                            input.form-control(
                              name="phone",
                              type="text",
                              placeholder="none"
                            )
                        .form-group
                          .formControls
                            button.btn.btn-primary(
                              type="submit",
                              value="Continuer",
                              disabled
                            ) Continuer
                      fieldset#fieldset3.hidden
